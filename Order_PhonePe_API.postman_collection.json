{
  "info": {
    "name": "Order and PhonePe Payment API",
    "description": "Complete API collection for Order Management and PhonePe Payment Integration",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5000/api",
      "type": "string"
    },
    {
      "key": "authToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "userId",
      "value": "",
      "type": "string"
    },
    {
      "key": "addressId",
      "value": "",
      "type": "string"
    },
    {
      "key": "orderId",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200 || pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    if (response.success && response.data.token) {",
                  "        pm.collectionVariables.set('authToken', response.data.token);",
                  "        pm.collectionVariables.set('userId', response.data._id);",
                  "        console.log('Token saved:', response.data.token.substring(0, 20) + '...');",
                  "    }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Rajesh Kumar\",\n  \"email\": \"rajesh.kumar@example.com\",\n  \"phone\": \"+919876543210\",\n  \"password\": \"SecurePass123!\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/users/register",
              "host": ["{{baseUrl}}"],
              "path": ["users", "register"]
            },
            "description": "Register a new user account"
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    if (response.success && response.data.token) {",
                  "        pm.collectionVariables.set('authToken', response.data.token);",
                  "        pm.collectionVariables.set('userId', response.data._id);",
                  "        console.log('Login successful');",
                  "    }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"rajesh.kumar@example.com\",\n  \"password\": \"SecurePass123!\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/users/login",
              "host": ["{{baseUrl}}"],
              "path": ["users", "login"]
            },
            "description": "Login with email and password"
          }
        }
      ]
    },
    {
      "name": "Address Management",
      "item": [
        {
          "name": "Create Address",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    if (response.success && response.data._id) {",
                  "        pm.collectionVariables.set('addressId', response.data._id);",
                  "        console.log('Address ID saved:', response.data._id);",
                  "    }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"type\": \"home\",\n  \"isDefault\": true,\n  \"fullName\": \"Rajesh Kumar\",\n  \"phone\": \"+919876543210\",\n  \"addressLine1\": \"123, Building A, Sector 5\",\n  \"city\": \"Mumbai\",\n  \"state\": \"Maharashtra\",\n  \"district\": \"Mumbai\",\n  \"postalCode\": \"400001\",\n  \"country\": \"India\",\n  \"landmark\": \"Near XYZ Mall, Opp. Metro Station\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/addresses",
              "host": ["{{baseUrl}}"],
              "path": ["addresses"]
            },
            "description": "Create a new shipping address"
          }
        },
        {
          "name": "Get All Addresses",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/addresses",
              "host": ["{{baseUrl}}"],
              "path": ["addresses"]
            },
            "description": "Get all addresses for the logged-in user"
          }
        }
      ]
    },
    {
      "name": "Order Management",
      "item": [
        {
          "name": "Create Order with Mug (Bike Number)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    if (response.success && response.data.order._id) {",
                  "        pm.collectionVariables.set('orderId', response.data.order._id);",
                  "        console.log('Order ID saved:', response.data.order._id);",
                  "        console.log('Order Number:', response.data.order.orderNumber);",
                  "        console.log('Total Amount:', response.data.order.finalAmount);",
                  "        if (response.data.paymentRequest) {",
                  "            console.log('Payment Transaction ID:', response.data.paymentRequest.merchantTransactionId);",
                  "        }",
                  "    }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"items\": [\n    {\n      \"productId\": \"65a1b2c3d4e5f6789abcdef2\",\n      \"productName\": \"Personalized Mug - Royal King\",\n      \"quantity\": 2,\n      \"price\": 599,\n      \"isMug\": true,\n      \"bikeNumber\": \"MH12AB3456\"\n    },\n    {\n      \"productId\": \"65a1b2c3d4e5f6789abcdef3\",\n      \"productName\": \"Premium Coffee Mug Set\",\n      \"quantity\": 1,\n      \"price\": 1299\n    }\n  ],\n  \"shippingAddressId\": \"{{addressId}}\",\n  \"paymentMethod\": \"phonepe\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/orders",
              "host": ["{{baseUrl}}"],
              "path": ["orders"]
            },
            "description": "Create order with personalized mug having bike number"
          }
        },
        {
          "name": "Create Simple Order (No Mug)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    if (response.success && response.data.order._id) {",
                  "        pm.collectionVariables.set('orderId', response.data.order._id);",
                  "    }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"items\": [\n    {\n      \"productId\": \"65a1b2c3d4e5f6789abcdef4\",\n      \"productName\": \"Ceramic Mug - Blue\",\n      \"quantity\": 3,\n      \"price\": 450\n    }\n  ],\n  \"shippingAddressId\": \"{{addressId}}\",\n  \"paymentMethod\": \"phonepe\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/orders",
              "host": ["{{baseUrl}}"],
              "path": ["orders"]
            },
            "description": "Create a simple order without mug customization"
          }
        },
        {
          "name": "Get All Orders",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/orders?page=1&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["orders"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                },
                {
                  "key": "status",
                  "value": "",
                  "disabled": true
                }
              ]
            },
            "description": "Get all orders for the logged-in user"
          }
        },
        {
          "name": "Get Single Order",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/orders/{{orderId}}",
              "host": ["{{baseUrl}}"],
              "path": ["orders", "{{orderId}}"]
            },
            "description": "Get details of a specific order"
          }
        }
      ]
    },
    {
      "name": "PhonePe Payment",
      "item": [
        {
          "name": "Initiate PhonePe Payment",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": ""
            },
            "url": {
              "raw": "{{baseUrl}}/orders/{{orderId}}/payment/phonepe",
              "host": ["{{baseUrl}}"],
              "path": ["orders", "{{orderId}}", "payment", "phonepe"]
            },
            "description": "Create a new PhonePe payment request for existing order"
          }
        },
        {
          "name": "PhonePe Callback (Simulation)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"response\": \"BASE64_ENCODED_PAYMENT_RESPONSE_FROM_PHONEPE\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/orders/payment/phonepe/callback",
              "host": ["{{baseUrl}}"],
              "path": ["orders", "payment", "phonepe", "callback"]
            },
            "description": "PhonePe sends callback here after payment (simulation only - not for manual testing)"
          }
        }
      ]
    }
  ]
}

